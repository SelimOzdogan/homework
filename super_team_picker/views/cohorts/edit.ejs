<%- include('../partials/header.ejs') %>
<div class="container">
    <h3>Edit Cohort</h3>
    <form method="POST" action="/cohorts/<%= cohort.id %>">
        <input type="hidden" name="_method" value="PATCH" />

        <div class="form-group">
            <label for="logoUrl">Logo Url</label><br />
            <input type="url" class="form-control" name="logoUrl" value="<%= cohort.logoUrl %>" />
        </div>
        <div class="form-group">
            <label for="name">Name</label><br />
            <input type="text" class="form-control" name="name" value="<%= cohort.name %>" />
        </div>
        <div class="form-group">
            <label for="members">Members</label><br />
            <textarea class="form-control" name="members" class="form-control"><%= cohort.members %></textarea>
        </div>
        <div class="divNewsButton">
        <input type="submit" class="btn btn-outline-primary newsButton" value="Submit" />
        </div>
    </form>
</div>
<%- include('../partials/footer.ejs') %>