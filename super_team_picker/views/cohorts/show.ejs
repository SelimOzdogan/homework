<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="card mb-4">
        <div class="card body">
            <h5 class="card-title"><%= cohort.name %></h5>
            <p class="card-text">
                <div style="border-bottom: 1px solid silver; padding-bottom: 10px;"><%= cohort.members %></div>
            </p>
            <form action="/cohorts/<%= cohort.id %>/method" method="POST">
                <div class="method">
                    <h6>Method</h6>
                    <div class="form-group">
                        <input id="team" type="radio" value="team" name="method">
                        <label for="team">Team Count</label>
                    </div>
                    <div class="form-group">
                        <input id="member" type="radio" value="member" name="method">
                        <label for="member">Number Per Team</label>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="text" class="form-control" name="quantity" />
                    </div>
                    <input type="submit" class="btn btn-outline-success" value="Assign Teams" />
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>